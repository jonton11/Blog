
<%= notice %>
<div class="container">

<h2> <%= @post.title %>  </h2>
<br />
<p> <%= @post.body %> </p>

<hr />

<%= link_to "Edit", edit_post_path(@post) %>
|
<%= link_to "Delete", post_path(@post), data: {confirm: "Are you sure you want to delete this post?"}, method: :delete%>

<h3> Submit a Comment </h3>

<%= form_for [@post, @comment], :html => {:class => 'form-vertical'} do |c| %>
<div class='form-group'>
  <%= c.label :body, "Comment: " %>
  <br />
  <%= c.text_area :body, :class => "form-control", :rows => "5" %>
  <br /> <br />
  <%= c.submit "Submit Comment", class: "btn btn-default btn-md" %>
</div>
<% end %>

<hr />

<h3> Comments </h3>

<% @post.comments.each do |c| %>
  <%= c.body %>
  <%= link_to "Delete Comment", post_comment_path(@post, c), data: {confirm: "Are you sure?"}, method: :delete %>
  <br />
  <br />
<%end%>
</div>
