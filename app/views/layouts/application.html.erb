<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid" >
    <ul class="nav navbar-nav navbar-left">
      <li><%= link_to "Index", home_path %></li>
      <li><%= link_to "About Page", home_about_path, method: :get %></li>
      <li><%= link_to "Blog Posts", posts_path %></li>
      <li><%= link_to "New Blog Post", new_post_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li> <%= link_to "#{current_user.full_name}", edit_user_path(current_user) %> </li>
        <li> <%= link_to "Logout", sessions_path, method: :delete,
        data: {confirm: "are you sure you want to log out?"}%> </li>
      <% else %>
      <li> <%= link_to "Login", new_session_path %> </li>
      <li> <%= link_to "Sign Up", new_user_path %>  </li>
      <% end %>
    </ul>
  </div>
</div>

<hr />

<%= yield %>

</body>
</html>
