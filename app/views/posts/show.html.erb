<div class="container">

  <!-- Display Post -->
  <h2> <%= @post.title %>  </h2>
  <br />
  <p> <%= @post.body %> </p>
  <br />
  <p> Tags: <%= @post.tags.map{|tag| tag.name}.join(", ") %> </p>

  <!-- User actions -->
  <span id="post-fav">
    <%= render "/favorites/favorite" %>
  </span>
  |
  <%= link_to "Edit", edit_post_path(@post) %>
  |
  <%= link_to "Delete", post_path(@post), data: {confirm: "Are you sure you want to delete this post?"}, method: :delete%>
  <hr />

  <!-- Submit a Comment -->
  <h3> Submit a Comment </h3>
  <div id="comment-form">
    <%= render "/comments/form", comment: @comment %>
  </div>

  <!-- List All Comments -->
  <h3> All Comments </h3>
  <hr />

  <div id="comments">
    <% @post.comments.each do |com| %>
      <%= render "/comments/comment", comment: com %>
    <%end%>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="edit-comment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"></div>
</div>
